#!/bin/sh
for i in $*; do
	echo $i
        eval $i
done

if [ -f $USERS_DIR/.config ]; then
. $USERS_DIR/.config
fi

if [ -f $LINUX_DIR/.config ]; then
. $LINUX_DIR/.config
fi

# removed by pk
#if RAMFS no need to generate rootfs
#if [ "$CONFIG_BLK_DEV_INITRD" = "y" ]; then
#	exit 0
